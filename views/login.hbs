<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="../public/assets/css/login.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Login</title>
</head>

<body>


    <!-- NAVBAR -->
    <nav class="navbar">
        <div class="navContainer">
            <div class="navLeft">
                <div class="navLogo">
                    <img src="../public/assets/image/profile.jpg" alt="profile">
                </div>

                <div class="navMenu">
                    <ul>
                        <li class="navLinks">
                            <a href="/">Home</a>
                        </li>
                        <li class="navLinks">
                            <a href="/blog">Blog</a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="navCta">
                <button class="contac"><a href="/contac">Contac Me</a></button>
            </div>
        </div>
    </nav>


    <main class="main">
        {{#if messages.danger}}
        <div class="alert alert-danger" role="alert">
            {{messages.danger}}
        </div>
        {{/if}}
        <!--CREATE POST-->
        <section class="editPost">
            <h1 class="headingCreate">Login here</h1>

            <form class="createInput" action="/login" method="POST">
                <div class="wrap">
                    <label class="label" for="title">Email</label>
                    <input name="inputEmail" type="text" id="input-title" placeholder="Type your email" required>
                </div>
                <div class="wrap">
                    <label class="label" for="title">Password</label>
                    <input name="inputPassword" type="password" id="input-title" placeholder="Type your password"
                        required>
                </div>

                {{!-- <div class="wrap">
                    <label class="label" for="content">Content</label>
                    <textarea name="updateContent" id="input-content" cols="30" rows="10"
                        placeholder="Type your content">{{blog.content}}</textarea>
                </div> --}}

                <div class="post-button">
                    <button>Login</button>
                </div>
            </form>

        </section>
    </main>
</body>

</html>